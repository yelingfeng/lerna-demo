{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",                       
    "module": "esnext",  
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],    
    "rootDir": ".",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,    
    "paths": {
      "@chanct/common":["packages/common/src"]
    } 
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}
